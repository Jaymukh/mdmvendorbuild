<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	controllerName="murphy.mdm.vendor.murphymdmvendor.controller.CreateERPVendor" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="crtVnd" showHeader="false" showNavButton="false">
		<content>
			<Toolbar>
				<Title
					text="{ parts: [ 'CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/vnd_lfa1/lifnr','CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/vnd_lfa1/NAME1','CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/vnd_lfa1/ORT01','CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/vnd_lfa1/REGIO','CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/vnd_lfa1/PSTLZ'], formatter: '.formatCR_Org_Name' }"></Title>
			</Toolbar>
			<Page id="sideContentContainer" showHeader="false" showNavButton="false" showFooter="true">
				<content>
					<l:DynamicSideContent id="DynamicSideContent" class="sapUiDSCExplored sapUiContentPadding" containerQuery="true"
						sideContentFallDown="BelowM" breakpointChanged="handleBreakpointChangeEvent">
						<VBox>
							<Panel expandable="true" expanded="true" headerText="Change Requests">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.ChangeRequest" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="true" headerText="ERP Vendor Details*">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.Details" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Control Data">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.ControlData" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Reference Data">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.ReferenceData" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" visible="false" expanded="false" headerText="Tax Numbers">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.TaxNumbers" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Tax Information">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.TaxInformation" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Bank Accounts">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.BankAccounts" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Payment Transactions*">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.PaymentTransaction" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Murphy Data">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.MurphyData" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Company Codes*">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.CompanyCodes" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Purchasing Organization">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.PurchasingOrg" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Additional Purchasing Data">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.AdditionalPurOrg" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Address*" expand="handleAddressSection">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.Address" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Contact Persons">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.ContactPersons" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Workplace Address">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.WorkplaceAddress" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="Industry">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.Industry" type="XML"/>
								</content>
							</Panel>
							<Panel expandable="true" expanded="false" headerText="PRA Data*">
								<content>
									<core:Fragment fragmentName="murphy.mdm.vendor.murphymdmvendor.fragments.vendor.PRAData" type="XML"/>
								</content>
							</Panel>
						</VBox>
						<l:sideContent>
							<IconTabBar expanded="true">
								<items>
									<IconTabFilter text="Attachments" key="attachments">
										<UploadCollection id="UploadCollectionCreateReq" multiple="false" change="onChangeFileUpload" selectionChange="onSelectionDocumentChange"
											typeMissmatch="onTypeMissmatch" items="{ path: 'crERPAttachmentModel>/documentInteractionDtos', templateShareable: false }"
											numberOfAttachmentsText="Uploaded Documents" uploadEnabled="true" uploadButtonInvisible="false" mode="Delete"
											fileType="{CreateVendorModel>/SupportedFileType}">
											<items>
												<UploadCollectionItem documentId="{crERPAttachmentModel>attachmentEntity/dms_ref_id}"
													fileName="{crERPAttachmentModel>attachmentEntity/attachment_name}" mimeType="{crERPAttachmentModel>attachmentEntity/mime_type}"
													enableEdit="false" enableDelete="true" visibleEdit="false" url="abc" deletePress="onDeleteAttachment"
													visibleDelete="{= (${CreateVendorModel>/createCRVendorData/crID} ? false : true)}" press="onDocumentDownload">
													<attributes>
														<ObjectAttribute title="Uploaded By"
															text="{crERPAttachmentModel>attachmentEntity/created_by/firstname} {crERPAttachmentModel>attachmentEntity/created_by/lastname}"/>
														<ObjectAttribute title="Uploaded On" text="{path:'crERPAttachmentModel>attachmentEntity/created_on'}"/>
													</attributes>
												</UploadCollectionItem>
											</items>
										</UploadCollection>
									</IconTabFilter>
									<IconTabFilter text="Comments" key="comments">
										<!--<VBox>-->
										<Label text="Write a Comment:"/>
										<HBox width="100%">
											<!--<Avatar initials="SD" displaySize="XS" backgroundColor="Green"/>-->
											<TextArea id="createERPVendorCommentBoxId" width="164%" value="{CreateVendorModel>/createCRVendorData/newComment}"></TextArea>
										</HBox>
										<Toolbar>
											<ToolbarSpacer/>
											<Button text="Add" press="onAddCommentCreateCR"/>
										</Toolbar>
										<!--</VBox>-->
										<List id="createERPVendorAddedCommentListId" headerText="Added Comments" items="{crERPCommentedModel>/parentCrDTOs/0/crCommentDTOs}">
											<FeedListItem sender="{crERPCommentedModel>note_by_user/firstname} {crERPCommentedModel>note_by_user/lastname}" senderActive="false"
												iconDensityAware="false" info="{Type}" timestamp="{crERPCommentedModel>note_date}" text="{crERPCommentedModel>note_desc}"
												convertLinksToAnchorTags="All" actions="{path: 'crERPCommentedModel>actions', templateShareable: false}">
												<FeedListItemAction text="{crERPCommentedModel>Text}" icon="{crERPCommentedModel>Icon}" key="{crERPCommentedModel>Key}"
													press="onCommentActionPressed"/>
											</FeedListItem>
										</List>
									</IconTabFilter>
								</items>
							</IconTabBar>
						</l:sideContent>
					</l:DynamicSideContent>
				</content>
			</Page>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Save" type="Transparent" press="onSaveClick"/>
				<Button text="Submit" visible="false" type="Transparent" press="onSubmitClick"/>
				<Button text="Check" type="Transparent" press="onCheckClick"/>
				<Button icon="sap-icon://undo" type="Transparent" press="onUndoClick" visible="false"/>
				<Button icon="sap-icon://redo" type="Transparent" press="onRedoClick" visible="false"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>