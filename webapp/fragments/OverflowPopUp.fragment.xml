<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover placement="Auto" showHeader="false">
		<content>
			<List id="list">
				<!--type="{=${SearchVendorPopupModel>/pendingRequest} ==='OverDue'? 'Active' :'Inactive'}"-->
				<StandardListItem title="Edit" 
					info="{=${SearchVendorPopupModel>/openCrCount} === 0 ? '' :'A change request is in progress.'}" icon="sap-icon://edit"
					type="{=${SearchVendorPopupModel>/openCrCount} === 0 ? 'Active' : 'Inactive'}"
					press="onEditVendorPress"/>
				<StandardListItem title="Block" type="{=${SearchVendorPopupModel>/openCrCount} === 0 ? 'Active' : 'Inactive'}"
					info="{=${SearchVendorPopupModel>/openCrCount} === 0 ? '' :'A change request is in progress.'}" icon="sap-icon://cancel"
					press="onBlockVendorPress"/>
				<StandardListItem title="Delete" type="{=${SearchVendorPopupModel>/openCrCount} === 0 ? 'Active' : 'Inactive'}" press="onDeleteVendorPress"
					info="{=${SearchVendorPopupModel>/openCrCount} === 0 ? '' :'A change request is in progress.'}" icon="sap-icon://delete"/>
			</List>
		</content>
	</Popover>
</core:FragmentDefinition>