<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Popover placement="Bottom" showHeader="false">
   	<content>
   		<List id="list">
					<StandardListItem title="Edit" type="{=${SearchVendorPopupModel>/pendingRequest} ==='OverDue'? 'Active' :'Inactive'}"
					info= "{=${SearchVendorPopupModel>/pendingRequest} ==='OverDue'? '' :'A change request is in progress.'}"
					icon="sap-icon://edit" press="onEdit" />
					<StandardListItem title="Block" type="{=${SearchVendorPopupModel>/pendingRequest} ==='OverDue'? 'Active' :'Inactive'}" 
					info= "{=${SearchVendorPopupModel>/pendingRequest} ==='OverDue'? '' :'A change request is in progress.'}"
					icon="sap-icon://cancel" press="onBlock" />
		</List>
   	</content>
   </Popover>
</core:FragmentDefinition>