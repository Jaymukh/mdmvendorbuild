<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<Table items="{vndLfm1>/rows}">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer></ToolbarSpacer>
				<Button text="Add" press="onAddPurOrg" type="Emphasized"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column >
				<header>
					<Label text="Purchasing Organization" design="Bold"></Label>
				</header>
			</Column>
			<Column>
				<header>
					<Label text="Purchasing Organization Description" design="Bold"></Label>
				</header>
			</Column>
			<Column width="10%">
				<header>
					<Label text=""></Label>
				</header>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{vndLfm1>ekorg}"/>
					<ComboBox showSecondaryValues="true" items="{purOrgPurOrgModel>/modelMap}" selectedKey="{vndLfm1>ekorg}" editable="false">
						<items>
							<core:ListItem text="{purOrgPurOrgModel>ekotx}" additionalText="{purOrgPurOrgModel>ekorg}" key="{purOrgPurOrgModel>ekorg}"/>
						</items>
					</ComboBox>
					<HBox>
						<core:Icon src="sap-icon://copy" hoverBackgroundColor="#346187" hoverColor="#ffffff" class="sapUiSmallMarginEnd" press="onCopyPurchaseOg"/>
						<core:Icon src="sap-icon://edit" hoverBackgroundColor="#346187" hoverColor="#ffffff" class="sapUiSmallMarginEnd" press="onEditPurchaseOrg"/>
						<core:Icon src="sap-icon://delete" hoverBackgroundColor="#346187" hoverColor="#ffffff" class="sapUiSmallMarginEnd"
							press="onDeletePurchaseOrg"/>
					</HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
		adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="ERP Vendor Parchasing Organization"/>
			<Label text="Purchasing Organization" required="true"/>
			<ComboBox id="purOrgPurOrgId" showSecondaryValues="true" items="{purOrgPurOrgModel>/modelMap}" change="handleAutoPopulatePurOrg"
				selectedKey="{vndLfm1>/lfm1/ekorg}">
				<items>
					<core:ListItem text="{purOrgPurOrgModel>ekotx}" additionalText="{purOrgPurOrgModel>ekorg}" key="{purOrgPurOrgModel>ekorg}"/>
				</items>
			</ComboBox>
			<core:Title text="ERP Vendor Parchasing Organization : Conditions" tooltip="ERP Vendor Parchasing Organization : Conditions"/>
			<Label text="Order Currency"/>
			<Input id="idPurOrgOrderCurrency" required="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true"
				value="{vndLfm1>/lfm1/WAERS}">
				<customData>
					<core:CustomData key="title" value="Order Currency"></core:CustomData>
					<core:CustomData key="table" value="TCURC"></core:CustomData>
					<core:CustomData key="ltext" value="Text"></core:CustomData>
					<core:CustomData key="waers" value="Key"></core:CustomData>
					<core:CustomData key="inputKey" value="waers"></core:CustomData>
					<core:CustomData key="inputText" value="ltext"></core:CustomData>
				</customData>
			</Input>
			<Label text="Minimum Order Value"/>
			<Input value="{vndLfm1>/lfm1/MINBW}" maxLength="13"/>
			<Label text="Schema Group (Vendor)"/>
			<Input showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true" value="{vndLfm1>/lfm1/KALSK}">
				<customData>
					<core:CustomData key="title" value="Schema Group (Vendor)"></core:CustomData>
					<core:CustomData key="table" value="TMKK"></core:CustomData>
					<core:CustomData key="kalsb" value="Name"></core:CustomData>
					<core:CustomData key="kalsk" value="Key"></core:CustomData>
					<core:CustomData key="inputKey" value="kalsk"></core:CustomData>
					<core:CustomData key="inputText" value="kalsb"></core:CustomData>
				</customData>
			</Input>
			<Label text="LB Restriction Profile"/>
			<Input value="{vndLfm1>/lfm1/BOPNR}" maxLength="4"/>
			<Label text="Terms of Payment" required="true"/>
			<!--<Select id="idPurOrgTermsOfPayment" forceSelection="false" 
												selectedKey="{vndLfm1>/lfm1/ZTERM}">
												<items>
													<core:Item key="0001" text="Payable immediately Due net"/>
													<core:Item key="0002" text="within 14 days 2 % cash discount;; within 30 days Due net"/>
													<core:Item key="0003" text="within 14 days 3 % cash discount;;within 20 days 2 % cash discount;;within 30 days Due net"/>
													<core:Item key="0004" text="Payable immediately Due net;;Baseline date on End of the month"/>
													<core:Item key="0005" text="Payable immediately Due net;;Baseline date on 10 of next month"/>
													<core:Item key="0006"
														text="Before End of the month 4 % cash discount;; Before 15 of the next month ;; 2 % cash discount;;Before 15 in 2 months Due net"/>
													<core:Item key="0007"
														text="For incoming invoices until 15 of the month;;Before 15 of the next month;; 2 % cash discount Before End of the next month Due net For incoming invoices until End of the month Before End of the next month ;; 2 % cash discoun Before 15 in 2 months Due net"/>
												</items>
											</Select>-->
			<Input id="idPurOrgTermsOfPayment" required="true" showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true"
				value="{vndLfm1>/lfm1/ZTERM}">
				<customData>
					<core:CustomData key="title" value="Terms of Payment"></core:CustomData>
					<core:CustomData key="table" value="local"></core:CustomData>
					<core:CustomData key="text" value="Name"></core:CustomData>
					<core:CustomData key="key" value="Key"></core:CustomData>
					<core:CustomData key="inputKey" value="key"></core:CustomData>
					<core:CustomData key="inputText" value="key"></core:CustomData>
				</customData>
			</Input>
			<Label text="Incoterms"/>
			<Input id="idPurOrgIncoPart1" showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true"
				value="{vndLfm1>/lfm1/INCO1}">
				<customData>
					<core:CustomData key="title" value="Incoterms"></core:CustomData>
					<core:CustomData key="table" value="TINC"></core:CustomData>
					<core:CustomData key="bezei" value="Name"></core:CustomData>
					<core:CustomData key="inco1" value="Key"></core:CustomData>
					<core:CustomData key="inputKey" value="inco1"></core:CustomData>
					<core:CustomData key="inputText" value="bezei"></core:CustomData>
				</customData>
			</Input>
			<Label text="Incoterms Description"/>
			<Input id="idPurOrgIncoPart2" value="{vndLfm1>/lfm1/INCO2}" maxLength="28"/>
			<Label text="Pricing date Control"/>
			<Select forceSelection="false" id="purOrgPricingDateContrId" selectedKey="{vndLfm1>/lfm1/MEPRF}">
				<items>
					<core:Item text="No Control" key=""/>
					<core:Item text="Purchase Order Date" key="1"/>
					<core:Item text="Delivery Date" key="2"/>
					<core:Item text="Current Date" key="3"/>
					<core:Item text="Manual" key="4"/>
					<core:Item text="GR Date" key="5"/>
				</items>
			</Select>
			<core:Title text="ERP Vendor Company Code : Sales Data"/>
			<Label text="Sales Person"/>
			<Input value="{vndLfm1>/lfm1/VERKF}" maxLength="30"/>
			<core:Title/>
			<Label text="Account with Vendor"/>
			<Input value="{vndLfm1>/lfm1/EIKTO}" maxLength="12"/>
			<core:Title text="ERP Vendor Purchasing Organization: Control Data" tooltip="ERP Vendor Purchasing Organization: Control Data"/>
			<Label text="ABC Indicator"/>
			<Input value="{vndLfm1>/lfm1/LFABC}" maxLength="1"/>
			<Label text="Mode of Transport-Border"/>
			<Input showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true" value="{vndLfm1>/lfm1/EXPVZ}">
				<customData>
					<core:CustomData key="title" value="Mode of Transport Border"></core:CustomData>
					<core:CustomData key="table" value="T618"></core:CustomData>
					<core:CustomData key="bezei" value="Name"></core:CustomData>
					<core:CustomData key="expvz" value="Key"></core:CustomData>
					<core:CustomData key="land1" value="Country"></core:CustomData>
					<core:CustomData key="inputKey" value="expvz"></core:CustomData>
					<core:CustomData key="inputText" value="bezei"></core:CustomData>
				</customData>
			</Input>
			<Label text="Customs Office"/>
			<Input showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true" value="{vndLfm1>/lfm1/ZOLLA}">
				<customData>
					<core:CustomData key="title" value="Customs Office"></core:CustomData>
					<core:CustomData key="table" value="T615"></core:CustomData>
					<core:CustomData key="land1" value="Country"></core:CustomData>
					<core:CustomData key="zolla" value="Key"></core:CustomData>
					<core:CustomData key="text2" value="Name"></core:CustomData>
					<core:CustomData key="inputKey" value="zolla"></core:CustomData>
					<core:CustomData key="inputText" value="zolla"></core:CustomData>
				</customData>
			</Input>
			<Label text="Sort Criterion"/>
			<Select forceSelection="false" id="purOrgSortCriterionId" selectedKey="{vndLfm1>/lfm1/SKRIT}">
				<items>
					<core:Item text="By VSR sequence number" key=""/>
					<core:Item text="By EAN" key="A"/>
					<core:Item text="By material number" key="B"/>
					<core:Item text="By vendor material number" key="C"/>
					<core:Item text="By material group" key="D"/>
				</items>
			</Select>
			<Label text="Proact Control Profile"/>
			<Select forceSelection="false" id="purOrgProactContrlProfileId" selectedKey="{vndLfm1>/lfm1/PAPRF}">
				<items>
					<core:Item text="Control 1" key="1"/>
					<core:Item text="Control 2" key="2"/>
					<core:Item text="Control 3" key="3"/>
				</items>
			</Select>
			<Label text="Shipping Conditions"/>
			<Input showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true" value="{vndLfm1>/lfm1/VSBED}">
				<customData>
					<core:CustomData key="title" value="Shipping Conditions"></core:CustomData>
					<core:CustomData key="table" value="TVSB"></core:CustomData>
					<core:CustomData key="vtext" value="Name"></core:CustomData>
					<core:CustomData key="vsbed" value="Key"></core:CustomData>
					<core:CustomData key="inputKey" value="vsbed"></core:CustomData>
					<core:CustomData key="inputText" value="vtext"></core:CustomData>
				</customData>
			</Input>
			<Label text="Revaluation Allowed"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/XNBWY" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Qualifying for Discount in kind"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/NRGEW" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Relevant for price determination"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/PRFRE" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Relevant for Agency Business"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/AGREL" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Goods Receipt-Based Invoice Verification"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/WEBRE" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Automatic Evaluated Receipt Settlement for Deliveries"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<core:Title/>
			<Label text="Automatic Evaluated Receipt Settlement for Return Items"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/XERSR" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Acknowledgment Required"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/KZABS" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Automatic Purchase Order Generation Allowed"/>
			<CheckBox select="onSelectCheckBox" id="idAutoPurOrder" selected="{= ${vndLfm1>/lfm1/KZAUT} === 'X'}">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/KZAUT" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Subject to subsequent Settlement Accounting"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/BOLRE" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Index Compilation for Subsequent Settlement Active"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/BOIND" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Comparision/Agreement of Business Volume Required"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/UMSAE" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Document Index Active"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/BLIND" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Service-Based Invoice Verification"/>
			<CheckBox select="onSelectCheckBox" id="idServiceBasedInvoice" selected="{= ${vndLfm1>/lfm1/LEBRE} === 'X'}">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/LEBRE" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<core:Title text="Murphy Data"/>
			<Label text="Qualified Supplier List Flag"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/ZZQUA_FLAG" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<core:Title text="ERP Vendor Purchasing Organization: Default Data Material"
				tooltip="ERP Vendor Purchasing Organization: Default Data Material"/>
			<Label text="Purchasing Group"/>
			<Input showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true" value="{vndLfm1>/lfm1/EKGRP}">
				<customData>
					<core:CustomData key="title" value="Purchasing Group"></core:CustomData>
					<core:CustomData key="table" value="T024"></core:CustomData>
					<core:CustomData key="inputKey" value="eknam"></core:CustomData>
					<core:CustomData key="inputText" value="ekgrp"></core:CustomData>
					<core:CustomData key="ekgrp" value="Code"></core:CustomData>
					<core:CustomData key="eknam" value="Description"></core:CustomData>
				</customData>
			</Input>
			<Label text="Confirmation Control"/>
			<Input showValueHelp="true" valueHelpRequest=".onValueHelpRequested" valueHelpOnly="true" value="{vndLfm1>/lfm1/BSTAE}">
				<customData>
					<core:CustomData key="title" value="Confirmation Control"></core:CustomData>
					<core:CustomData key="table" value="T163L"></core:CustomData>
					<core:CustomData key="inputKey" value="bsbez"></core:CustomData>
					<core:CustomData key="inputText" value="bstae"></core:CustomData>
					<core:CustomData key="bsbez" value="Text"></core:CustomData>
					<core:CustomData key="bstae" value="Key"></core:CustomData>
				</customData>
			</Input>
			<Label text="Rounding profile"/>
			<Input value="{vndLfm1>/lfm1/RDPRF}" maxLength="4"/>
			<Label text="Planned delivery time in Days"/>
			<Input value="{vndLfm1>/lfm1/PLIFZ}" maxLength="3"/>
			<Label text="Unit of Measure Group"/>
			<Input value="{vndLfm1>/lfm1/MEGRU}" maxLength="4"/>
			<core:Title text="ERP Vendor Purchasing Organization: Service Data" tooltip="ERP Vendor Purchasing Organization: Service Data"/>
			<Label text="Price Marketing Agreed"/>
			<Input/>
			<Label text="Vendor Service Level"/>
			<Input value="{vndLfm1>/lfm1/VENSL}" maxLength="4"/>
			<Label text="Rack Jobbing Agreement with Vendor Exists"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/LISER" value="X"></core:CustomData>
				</customData>
			</CheckBox>
			<Label text="Order Entry by Vendor"/>
			<CheckBox select="onSelectCheckBox">
				<customData>
					<core:CustomData key="/vnd_lfm1/vnd_lfm1_1/LIBES" value="X"></core:CustomData>
				</customData>
			</CheckBox>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>