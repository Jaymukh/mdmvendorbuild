<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<form:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
		adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
		singleContainerFullSize="false">
		<form:content>
			<core:Title text="General Data"/>
			<Label text="Change Request ID"/>
			<Input
				value="{ parts: [ 'CreateVendorModel>/createCRVendorData/crID', 'CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/vnd_lfa1/entity_id'], formatter: '.formatCR_Entiry_ID' }"
				enabled="false"/>
			<Label text="Description"/>
			<TextArea value="{CreateVendorModel>/changeReq/genData/desc}"></TextArea>
			<Label required="true" text="Priority"/>
			<Select forceSelection="false" selectedKey="{CreateVendorModel>/changeReq/genData/priority}" showSecondaryValues="true"
				items="{CreateVendorModel>/createCRDD/CR_PRIORITY}">
				<items>
					<core:ListItem text="{CreateVendorModel>taxonomy_name}" additionalText="{CreateVendorModel>taxonomy_id}"
						key="{CreateVendorModel>taxonomy_id}"/>
				</items>
			</Select>
			<Label text="Due Date"/>
			<DatePicker displayFormat="MM-dd-YYYY" valueFormat="YYYYMMdd" value="{CreateVendorModel>/changeReq/genData/dueDate}"></DatePicker>
			<Label text="Reason" required="true"/>
			<Select id="idCreateERPVendorReason" enabled="true" forceSelection="false" selectedKey="{CreateVendorModel>/changeReq/genData/reason}"
				showSecondaryValues="true" items="{CreateVendorModel>/createCRDD/VENDOR_CR_REASON}">
				<items>
					<core:ListItem text="{CreateVendorModel>taxonomy_name}" additionalText="{CreateVendorModel>taxonomy_id}"
						key="{CreateVendorModel>taxonomy_id}"/>
				</items>
			</Select>
			<core:Title text="Process Data"/>
			<Label text="Status"/>
			<Input value="{CreateVendorModel>/changeReq/genData/status}" enabled="false"/>
			<Label text="Current Work Item"/>
			<Input value="{CreateVendorModel>/changeReq/genData/currWrkItem}" enabled="false"/>
			<Label text="Created By"/>
			<Input
				value="{CreateVendorModel>/changeReq/genData/change_request_by/firstname} {CreateVendorModel>/changeReq/genData/change_request_by/lastname}"
				enabled="false"/>
			<Label text="Date/Time of Creation"/>
			<DatePicker displayFormat="MM-dd-YYYY" valueFormat="YYYYMMdd"
				value="{CreateVendorModel>/createCRVendorData/formData/parentDTO/customData/gen_adrc/gen_adrc_1/date_from}" enabled="false"/>
			<Input value="{CreateVendorModel>/createCRVendorData/crTime}" enabled="false">
				<layoutData>
					<l:GridData span="XL2 L3 M3 S4"/>
				</layoutData>
			</Input>
		</form:content>
	</form:SimpleForm>
</core:FragmentDefinition>