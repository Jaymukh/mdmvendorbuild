<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="idCreateVendorErrorPopover"
		showHeader="false"
		contentWidth="320px"
		contentHeight="500px"
		placement="Right"
		ariaLabelledBy="master-title">
			<Page
				id="master"
				class="sapUiResponsivePadding--header"
				title="Error Messages">
				<List
					id="list"
					items="{CreateVendorModel>/missingFields}" >
					<StandardListItem wrapping = "true"
						title="{CreateVendorModel>ErrorMessage}" />
				</List>
			</Page>
		
	</Popover>
</core:FragmentDefinition>